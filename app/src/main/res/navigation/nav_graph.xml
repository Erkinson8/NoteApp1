<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onBoardFragment">


    <fragment
        android:id="@+id/onBoardFragment"
        android:name="com.example.noteapp1.NoteApp.ui.fragments.onboard.OnBoardFragment"
        android:label="fragment_on_board"
        tools:layout="@layout/fragment_on_board" >
        <action
            android:id="@+id/action_onBoardFragment_to_singUpFragment"
            app:destination="@id/singUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/onBoardPagingFragment"
        android:name="com.example.noteapp1.NoteApp.ui.fragments.onboard.OnBoardPagingFragment"
        android:label="fragment_on_board_paging"
        tools:layout="@layout/fragment_on_board_paging" >
    </fragment>
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.example.noteapp1.NoteApp.ui.fragments.note.NoteFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_note" >
        <action
            android:id="@+id/action_noteFragment_to_noteDetailFragment"
            app:destination="@id/noteDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteDetailFragment"
        android:name="com.example.noteapp1.NoteApp.ui.fragments.detail.NoteDetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="noteId"
            app:argType="integer" />
    </fragment>
    <action
        android:id="@+id/action_noteDetailFragment_to_noteFragment"
        app:destination="@id/noteFragment" />
    <fragment
        android:id="@+id/singUpFragment"
        android:name="com.example.noteapp1.NoteApp.ui.fragments.singup.SingUpFragment"
        android:label="fragment_sing_up"
        tools:layout="@layout/fragment_sing_up" />
</navigation>